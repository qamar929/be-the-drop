<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bethedrop.DonorHomeActivity"
   >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <include
                android:id="@+id/Donortoolbar"
                layout="@layout/toolbar_main"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose a Category"
                    android:textSize="18dp"/>

<Spinner
    android:layout_marginTop="10sp"
    android:id="@+id/CategorySpinner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quantity of items"
                    android:textSize="18dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="enter quantity"
                    android:textSize="18dp"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Condition    "
                        android:textSize="18dp"
                        />

                    <RadioGroup
                        android:id="@+id/radioCondition"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" >

                        <RadioButton
                            android:id="@+id/radioNew"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New"
                            android:checked="true" />

                        <RadioButton
                            android:id="@+id/radioUsed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Used" />

                    </RadioGroup>




                </LinearLayout>

                <EditText
                    android:id="@+id/Description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                  android:hint="description"
                    android:text="Name" />

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"

                   >

                   <Button
                       android:id="@+id/selectPhoto"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:drawableRight="@drawable/photoicon"
                       android:text="Photo"
                       android:textSize="15dp" />

                   <ImageView
                       android:layout_width="match_parent"
                       android:id="@+id/my_avatar"
                       android:layout_height="wrap_content"
                       android:adjustViewBounds="true"
                       app:layout_collapseMode="parallax"
                       app:layout_collapseParallaxMultiplier="0.7" />

               </LinearLayout>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Price: "
    android:textSize="14dp"/>

                <EditText
                    android:id="@+id/price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
android:hint="enter price"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <Button
                        android:id="@+id/AddBasket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add to Basket"
                        android:textSize="20dp"
                        />

                    <Button
                        android:id="@+id/ViewBasket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Basket"
                        android:textSize="20dp"
                        />

                </LinearLayout>


            </LinearLayout>





</LinearLayout>